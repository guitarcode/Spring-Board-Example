<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/board/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Write</servlet-name>
        <jsp-file>/write.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Write</servlet-name>
        <url-pattern>/board/write</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostDetail</servlet-name>
        <jsp-file>/postDetail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostDetail</servlet-name>
        <url-pattern>/board/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WriteAction</servlet-name>
        <jsp-file>/writeAction.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WriteAction</servlet-name>
        <url-pattern>/board/write/action</url-pattern>
    </servlet-mapping>
</web-app>